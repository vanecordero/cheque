@model cheques.Context.TB_Proveedores

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear nuevo proveedor</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container-fluid">
    <h4>Proveedores</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form class="row">

    <div class="col-md-4 col-12 mt-md-2" style="margin-top: 10px; min-height: 80px;">

        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-4 col-12 mt-md-2" style="margin-top: 10px; min-height: 80px;">

        @Html.LabelFor(model => model.Tipo_Persona, htmlAttributes: new { @class = "form-label" })

        <select name="Tipo_Persona" class="form-control">
            <option disabled>Tipo de persona</option>
            <option value="Fisica" selected>Fisica</option>
            <option value="Juridica">Juridica</option>
        </select>
        @Html.ValidationMessageFor(model => model.Tipo_Persona, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-4 col-12 mt-md-2" style="margin-top: 10px; min-height: 80px;">
        @Html.LabelFor(model => model.Cedula_or_RNC, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.Cedula_or_RNC, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Cedula_or_RNC, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-4 col-12 mt-md-2" style="margin-top: 10px; min-height: 80px;">
        @Html.LabelFor(model => model.Balance, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Balance, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-4 col-12 mt-md-2" style="margin-top: 10px; min-height: 80px;">
        @Html.LabelFor(model => model.Cuenta_contable_proveedor, htmlAttributes: new { @class = "form-label" })

        @Html.EditorFor(model => model.Cuenta_contable_proveedor, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Cuenta_contable_proveedor, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-12 mt-md-2" style="margin-top: 10px; min-height: 80px;">
        @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.RadioButtonFor(model => model.Estado, true, new { @checked = "checked", @class = "form-check-input" })
            @Html.LabelFor(model => model.Estado, "Activo", htmlAttributes: new { @class = "form-label" })
        
            @Html.RadioButtonFor(model => model.Estado, false, new { @class = "form-check-input" })
            @Html.LabelFor(model => model.Estado, "Inactivo", htmlAttributes: new { @class = "form-label" })
        </div>
        @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
    </div> 
    <div class="col-md-12 mt-md-2 row" style="margin-top: 10px; min-height: 80px;">
        <div class="col-md-3">
            <button type="submit" class="btn btn-success">Crear proveedor</button>
        </div>
        <div class="col-md-3">
            <button type="button" class="btn btn-secondary">
                @Html.ActionLink("Ir atras", "Index", new { Style = "color:white" })
            </button>
        </div>
    </div>

</form>
</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
